{
  "manifest_version": 2,
  "name": "Github Workflow",
  "version": "1.0.2",
  "description": "An extension that allows you to hide files in pull requests and adds highlighting for notifications.",
  "permissions": [ "https://github.com/*", "storage" ],
  "icons": {"16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"},

  "background": {
      "page": "background.html"
  },

  "content_scripts": [{
      "matches": ["https://github.com/*"],
      "js": ["jquery-2.1.3.min.js", "app.js"]
  }],
  "browser_action": {"default_icon": "icon16.png",
                     "default_popup": "popup.html"}
}

